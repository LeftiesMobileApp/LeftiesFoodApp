<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutOrderHistory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OrderHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnBackToHomeOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelBackToCustHome" />

        <TextView
            android:id="@+id/titleYourOrders"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="24dp"
            android:text="@string/titleYourOrders"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderHistRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="23dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>