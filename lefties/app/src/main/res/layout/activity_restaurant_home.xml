<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F37"
    tools:context=".RestaurantHomeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRemind"
        app:layout_constraintEnd_toStartOf="@+id/txtRestoHomeWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/logoimg" />

    <TextView
        android:id="@+id/txtRestoHomeWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/mulish"
        android:text="Hi Manager! Welcome to Restaurant Nameâ€™s Dashboard"
        android:textColor="#fff"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toTopOf="@+id/btnRemind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRemind"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="415dp"
        android:backgroundTint="@color/gold"
        android:letterSpacing="0.12"
        android:text="Send Reminder For Pending Orders"
        android:textColor="@color/light"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnRemind2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/maroon"
        android:letterSpacing="0.12"
        android:text="Generate Report of historicial Orders"
        android:textColor="@color/light"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRemind3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRemind" />

    <Button
        android:id="@+id/btnRemind3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="279dp"
        android:backgroundTint="@color/salmon"
        android:letterSpacing="0.12"
        android:text="Add item"
        android:textColor="@color/light"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRemind2" />
</androidx.constraintlayout.widget.ConstraintLayout>